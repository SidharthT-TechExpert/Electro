<link rel="stylesheet" href="CSS/logIn.css">
<%- include('../partials/user/header') %>

<main class="login-wrapper">
  <div class="login-container">
    <!-- Left: Login Form -->
    <div class="login-left">
      <h2>Log in to Electro</h2>
      <p class="subtitle">Enter your details below</p>

      <form id="loginForm">
        <div class="form-group">
          <input type="text" id="email" required>
          <label for="email">Email or Phone Number</label>
          <i class="fas fa-envelope"></i>
        </div>

        <div class="form-group">
          <input type="password" id="password" required>
          <label for="password">Password</label>
          <i class="fas fa-lock"></i>
          <i class="fas fa-eye toggle-password" data-target="password"></i>
        </div>

        <!-- Remember + Forgot -->
        <div class="options">
          <label><input type="checkbox"> Remember Me</label>
          <a href="/forgetPassword">Forget Password?</a>
        </div>

        <!-- Buttons -->
        <button type="submit" class="btn-main">Log In</button>
        <button type="button" class="btn-google">
          <i class="fab fa-google"></i> Sign in with Google
        </button>

        <!-- Signup Redirect -->
        <div class="signup-link">
          <a href="/signup">Create an account ?</a>
        </div>
      </form>
    </div>

    <!-- Right: Promo Banner -->
    <div class="login-right">
      <div class="promo-card">
        <h3>Welcome Back!</h3>
        <p>Access your account and enjoy exclusive <b>member-only offers</b>.</p>
        <img src="/img/Banner2.jpg" alt="Promo Banner">
      </div>
    </div>
  </div>
</main>

<%- include('../partials/user/footer') %>
<script src="js/logIn.js"></script>