<link href="/css/signUp.css" rel="stylesheet">
<%- include('../partials/user/header') %>

<main class="signup-wrapper">
  <div class="signup-container" id="formContainer">
    <!-- Left: SignUp Form -->
    <div class="signup-left">
      <h2 id="formTitle">Create an Account</h2>
      <p class="subtitle">Enter your details below</p>

      <form class="signup-form" id="signupForm">
        <div class="form-group">
          <input type="text" required>
          <label>Name</label>
          <i class="fas fa-user"></i>
        </div>
        <div class="form-group">
          <input type="email" required>
          <label>Email</label>
          <i class="fas fa-envelope"></i>
        </div>
        <div class="form-group password-group">
          <input type="password" id="password" required>
          <label>Password</label>
          <i class="fas fa-lock"></i>
          <i class="fas fa-eye toggle-password" data-target="password"></i>
        </div>
        <div class="form-group password-group signup-only">
          <input type="password" id="confirmPassword">
          <label>Confirm Password</label>
          <i class="fas fa-lock"></i>
        </div>

        <!-- Remember Me -->
        <div class="remember-me">
          <label>
            <input type="checkbox"> Remember Me
          </label>
        </div>

        <!-- Buttons -->
        <button type="submit" class="btn-create" id="submitBtn">Create Account</button>
        <button type="button" class="btn-google">
          <i class="fab fa-google"></i> <span id="googleBtnText">Sign up with Google</span>
        </button>
      </form>
    </div>

    <!-- Right: Promo Banner -->
    <div class="signup-right">
      <div class="promo-card" id="promoCard">
        <h3>Welcome to Electro</h3>
        <p>Exclusive deals await you. Join now & get <b>10% OFF</b> on your first order.</p>
        <img src="/img/promo.jpg" alt="Promo Banner">
        <button class="btn-login-toggle" id="toggleLogin">Already have an account? Log In</button>
      </div>
    </div>
  </div>
</main>



<%- include('../partials/user/footer') %>
<script src="/js/signUp.js"></script>
