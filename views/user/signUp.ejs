<link rel="stylesheet" href="/CSS/signUp.css">
<%- include('../partials/user/header') %>


  <main class="signup-wrapper">
    <div class="signup-container">
      <!-- Left Form -->
      <div class="signup-left">
        <h2>Create Account</h2>
        <p class="subtitle">Enter your details below</p>

        <form id="signupForm">
          <div class="form-group">
            <input type="text" id="name" required>
            <label for="name">Name</label>
            <i class="fas fa-user"></i>
          </div>

          <div class="form-group">
            <input type="email" id="email" required>
            <label for="email">Email</label>
            <i class="fas fa-envelope"></i>
          </div>

          <div class="form-group">
            <input type="password" id="password" required>
            <label for="password">Password</label>
            <i class="fas fa-lock"></i>
            <i class="fas fa-eye toggle-password" data-target="password"></i>
          </div>

          <div class="password-strength" id="passwordStrength">Password strength: -</div>

          <div class="form-group signup-only">
            <input type="password" id="confirmPassword" required>
            <label for="confirmPassword">Confirm Password</label>
            <i class="fas fa-lock"></i>
          </div>

          <div class="remember-me mb-3">
            <label>
              <input type="checkbox"> Remember Me
            </label>
          </div>

          <button type="submit" class="btn-main">Create Account</button>
          <button type="button" class="btn-google"><i class="fab fa-google"></i> Sign up with Google</button>
        </form>
      </div>

      <!-- Right Promo -->
      <div class="signup-right">
        <div class="promo-card">
          <h3>Welcome to Electro</h3>
          <p>Exclusive deals await you. Join now & get <b>10% OFF</b> on your first order.</p>
          <img src="img/banner.jpeg" alt="Promo Banner">
          <button type="submit" onclick="window.location.href='/logIn'" class="btn-login-toggle">Already have an account? Log In</button>
        </div>
      </div>
    </div>
  </main>


  <script src="/js/signUp.js"></script>
  <%- include('../partials/user/footer') %>