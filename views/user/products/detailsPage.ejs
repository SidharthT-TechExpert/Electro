      -ms-overflow-style: none;
      scrollbar-width: none;
    }

    @media (max-width: 768px) {
      .main-image-container {
        cursor: default;
        overflow: hidden !important;
      }

      .main-image.zoomed {
        transform: scale(1) !important;
        cursor: default !important;
      }
