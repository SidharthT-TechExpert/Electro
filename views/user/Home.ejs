<!-- Header Start  -->
<%- include("../partials/user/header") %>
 
<main class="homepage">

  <!-- Hero Banner -->
  <section class="hero-banner bg-black text-white py-5">
    <div class="container">
      <div class="row align-items-center">
        <!-- Left text -->
        <div class="col-md-6">
          <p class="small mb-2">
            <i class="fab fa-apple"></i> iPhone 14 Series
          </p>
          <h1 class="fw-bold display-5">Up to 10% off Voucher</h1>
          <a href="#" class="btn btn-light mt-3 px-4 py-2">Shop Now →</a>
        </div>
        <!-- Right image -->
        <div class="col-md-6 text-center">
          <img src="/img/header-img.jpg" alt="iPhone Banner" class="img-fluid">
        </div>
      </div>
    </div>
  </section>

  <!-- Categories -->
  <section class="categories py-4 bg-light">
    <div class="container d-flex justify-content-center flex-wrap gap-3">
      <div class="cat-box active"><i class="fas fa-mobile-alt fa-2x"></i><p>Phones</p></div>
      <div class="cat-box"><i class="fas fa-laptop fa-2x"></i><p>Computers</p></div>
      <div class="cat-box"><i class="fas fa-clock fa-2x"></i><p>SmartWatch</p></div>
      <div class="cat-box"><i class="fas fa-camera fa-2x"></i><p>Camera</p></div>
      <div class="cat-box"><i class="fas fa-gamepad fa-2x"></i><p>Gaming</p></div>
      <div class="cat-box"><i class="fas fa-headphones fa-2x"></i><p>Headphones</p></div>
    </div>
  </section>

  <!-- Products Section -->
  <section class="products py-5 bg-dark text-white">
    <div class="container">

      <!-- Tabs -->
      <ul class="nav nav-tabs border-0 mb-4" id="productTabs">
        <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#best">Best Sellers</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#new">New Arrivals</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#hot">Hot Sales</a></li>
      </ul>

      <!-- Tab Content -->
      <div class="tab-content">

        <!-- Best Sellers -->
        <div id="best" class="tab-pane fade show active">
          <div class="row g-4">
            <% for(let i=1; i<=12; i++){ %>
              <div class="col-6 col-md-3">
                <div class="card product-card h-100">
                  <img src="/img/product-<%= i %>.png" class="card-img-top" alt="Product <%= i %>">
                  <div class="card-body text-dark">
                    <p class="small mb-1">Product <%= i %></p>
                    <h6 class="fw-bold">$99.<%= i %></h6>
                    <div class="text-warning small">★★★★★</div>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>

        <!-- New Arrivals -->
        <div id="new" class="tab-pane fade">
          <p class="text-center">New arrivals go here...</p>
        </div>

        <!-- Hot Sales -->
        <div id="hot" class="tab-pane fade">
          <p class="text-center">Hot sales go here...</p>
        </div>

      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="features py-4 bg-light">
    <div class="container d-flex justify-content-around text-center flex-wrap">
      <div class="feature-box">
        <div class="icon"><i class="fas fa-shipping-fast"></i></div>
        <h6>Free & Fast Delivery</h6>
        <p class="small">Free delivery for all orders over $50</p>
      </div>
      <div class="feature-box">
        <div class="icon"><i class="fas fa-headset"></i></div>
        <h6>24/7 Customer Service</h6>
        <p class="small">Friendly 24/7 customer support</p>
      </div>
      <div class="feature-box">
        <div class="icon"><i class="fas fa-undo"></i></div>
        <h6>Money Back Guarantee</h6>
        <p class="small">We return money within 30 days</p>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer bg-black text-white py-5">
    <div class="container">
      <div class="row g-4">
        <div class="col-md-3">
          <h6>Exclusive</h6>
          <p>Subscribe</p>
          <p>Get 10% off your first order</p>
          <form>
            <input type="email" class="form-control form-control-sm mb-2" placeholder="Enter Email">
            <button class="btn btn-danger btn-sm w-100">Subscribe</button>
          </form>
        </div>
        <div class="col-md-2">
          <h6>Support</h6>
          <ul class="list-unstyled small">
            <li><a href="#" class="text-white text-decoration-none">About Us</a></li>
            <li><a href="#" class="text-white text-decoration-none">Contact</a></li>
            <li><a href="#" class="text-white text-decoration-none">FAQs</a></li>
          </ul>
        </div>
        <div class="col-md-2">
          <h6>Account</h6>
          <ul class="list-unstyled small">
            <li><a href="#" class="text-white text-decoration-none">Login</a></li>
            <li><a href="#" class="text-white text-decoration-none">Register</a></li>
            <li><a href="#" class="text-white text-decoration-none">Wishlist</a></li>
            <li><a href="#" class="text-white text-decoration-none">Cart</a></li>
          </ul>
        </div>
        <div class="col-md-2">
          <h6>Quick Link</h6>
          <ul class="list-unstyled small">
            <li><a href="#" class="text-white text-decoration-none">Privacy Policy</a></li>
            <li><a href="#" class="text-white text-decoration-none">Terms of Use</a></li>
          </ul>
        </div>
        <div class="col-md-3">
          <h6>Download App</h6>
          <img src="/img/qr.png" alt="QR Code" class="mb-2" width="80">
          <div class="d-flex gap-2">
            <img src="/img/appstore.png" width="100" alt="App Store">
            <img src="/img/playstore.png" width="100" alt="Google Play">
          </div>
        </div>
      </div>
    </div>
  </footer>

</main>


<!-- Footer Start -->
<%- include("../partials/user/footer") %>
