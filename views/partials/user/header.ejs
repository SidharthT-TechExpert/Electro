<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Electro - Electronics Website Template</title>
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <meta content="" name="keywords">
  <meta content="" name="description">

  <!-- Google Web Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>


  <!-- Icon Font Stylesheet -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">


  <!-- Customized Bootstrap Stylesheet -->
  <link href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/header.css" rel="stylesheet">
  <link href="css/footer.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.23.0/dist/sweetalert2.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
  <!-- Top Info Bar -->
  <div class="top-info-bar bg-white border-bottom small py-1">
    <div class="container d-flex justify-content-between align-items-center">
      <span>
        Summer Sale For All Swim Suits And Free Express Delivery – OFF 50%!
        <strong><a href="#" class="text-dark text-decoration-none">ShopNow</a></strong>
      </span>

      <!-- Language -->
      <div class="dropdown">
        <button class="btn btn-sm btn-white dropdown-toggle" type="button" data-bs-toggle="dropdown">
          English
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <li><a class="dropdown-item" href="#">English</a></li>
          <li><a class="dropdown-item" href="#">Arabic</a></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Main Header -->
  <header class="main-header bg-light py-3">
    <div class="container d-flex justify-content-between align-items-center">

      <!-- Logo -->
      <a href="/" class="fs-4 fw-bold text-dark text-decoration-none">Electro</a>

      <!-- Search -->
      <form action="/search" method="GET" class="flex-grow-1 mx-4">
        <div class="input-group">
          <span class="input-group-text bg-white border-end-0">
            <i class="fas fa-search"></i>
          </span>
          <input type="text" name="q" class="form-control border-start-0 rounded-end" placeholder="Search">
        </div>
      </form>

      <!-- Right Controls -->
      <div class="d-flex align-items-center gap-3">
        <% if(typeof user !=="undefined" && user?.name ){ %>
          <!-- User Dropdown -->
          <!-- User Dropdown -->
          <div class="dropdown">
            <button class="btn btn-dark d-flex align-items-center gap-2 rounded user-btn" type="button"
              data-bs-toggle="dropdown" aria-expanded="false">

              <% if (user && user.profilePhoto) { %>
                <!-- Show profile photo -->
                <img src="/profile-photo/<%= user.profilePhoto %>" alt="Profile Photo" class="rounded-circle" width="20"
                  height="20" style="object-fit: cover;">
                <% } else { %>
                  <!-- Default user icon -->
                  <i class="fas fa-user-circle"></i>
                  <% } %>

                    <span>
                      <%= user?.name %>
                    </span>
                    <i class="fas fa-chevron-down arrow-icon"></i>
            </button>

            <ul class="dropdown-menu dropdown-menu-end shadow dropdown-dark">
              <li>
                <a class="dropdown-item d-flex align-items-center gap-2" href="/myProfile">
                  <% if (user && user.profilePhoto) { %>
                    <img src="/profile-photo/<%= user.profilePhoto %>" alt="Profile Photo" class="rounded-circle"
                      width="20" height="20" style="object-fit: cover;">
                    <% } else { %>
                      <i class="fas fa-user"></i>
                      <% } %>
                        My Profile
                </a>
              </li>

              <li>
                <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                  <i class="fas fa-box"></i> Orders
                </a>
              </li>
              <li>
                <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                  <i class="fas fa-heart"></i> Wishlist (1)
                </a>
              </li>
              <li>
                <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                  <i class="fas fa-wallet"></i> Wallet
                </a>
              </li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li>
                <a onclick="logout()" class="dropdown-item d-flex align-items-center gap-2">
                  <i class="fas fa-sign-out-alt"></i> Logout
                </a>
              </li>
            </ul>
          </div>


          <!-- Cart -->
          <a href="/cart" class="btn btn-outline-secondary d-flex align-items-center gap-2 position-relative">
            <i class="fas fa-shopping-cart"></i> Cart
            <% if (typeof cartCount !=="undefined" && cartCount> 0) { %>
              <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle">
                <%= cartCount %>
                  <% } else { %>

                    <% } %>
              </span>
          </a>

          <% } else {%>
            <!-- User Dropdown -->
            <div class="dropdown">
              <button class="btn btn-dark d-flex align-items-center gap-2 rounded user-btn" type="button"
                data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle"></i>
                <span>
                  SignUp
                </span>
                <i class="fas fa-chevron-down arrow-icon"></i>
              </button>
              <ul class="dropdown-menu dropdown-menu-end shadow dropdown-dark">
                <li>
                  <a class="dropdown-item d-flex align-items-center gap-2" href="/signUp">
                    <i class="bi bi-person-plus"></i>
                    SignUp
                  </a>
                </li>
                <li>
                  <a class="dropdown-item d-flex align-items-center gap-2" href="/logIn">
                    <i class="bi bi-box-arrow-in-right"></i>
                    LogIn
                  </a>
                </li>
              </ul>
            </div>

            <%}%>



              <!-- Notification Dropdown -->
              <div class="dropdown">
                <button class="btn btn-outline-secondary position-relative" type="button" data-bs-toggle="dropdown">
                  <i class="fas fa-bell"></i>
                  <!-- Notification Count -->
                  <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle">
                    3
                  </span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end shadow rounded-3 p-2">
                  <li>
                    <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                      <i class="fas fa-bell text-warning"></i>
                      New order placed
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                      <i class="fas fa-box text-primary"></i>
                      Order #2345 shipped
                    </a>
                  </li>
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li>
                    <a class="dropdown-item text-center small text-muted" href="#">
                      View all notifications
                    </a>
                  </li>
                </ul>
              </div>

              <!-- Customer Contact Dropdown -->
              <div class="dropdown ms-2">
                <button class="btn btn-outline-secondary position-relative" type="button" data-bs-toggle="dropdown">
                  <i class="fas fa-headset"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end shadow rounded-3 p-2">
                  <li>
                    <a class="dropdown-item d-flex align-items-center gap-2" href="tel:+1800123456">
                      <i class="fas fa-phone-alt text-success"></i>
                      Call Us
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item d-flex align-items-center gap-2" href="mailto:support@electro.com">
                      <i class="fas fa-envelope text-primary"></i>
                      Email Support
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item d-flex align-items-center gap-2" href="/chat">
                      <i class="fas fa-comments text-info"></i>
                      Live Chat
                    </a>
                  </li>
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li>
                    <span class="dropdown-item-text small text-muted">
                      24 × 7 Customer Support
                    </span>
                  </li>
                </ul>
              </div>


      </div>
    </div>
  </header>