<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Electro - Electronics Website Template</title>
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <meta content="" name="keywords">
  <meta content="" name="description">

  <!-- Google Web Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
    rel="stylesheet">

  <!-- Icon Font Stylesheet -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Libraries Stylesheet -->
  <link href="lib/animate/animate.min.css" rel="stylesheet">
  <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

  <!-- Customized Bootstrap Stylesheet -->
  <link href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/header.css" rel="stylesheet">
  <link href="css/footer.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.23.0/dist/sweetalert2.min.css">
</head>

<body>
  <!-- Top Info Bar -->
  <div class="top-info-bar bg-white border-bottom small py-1">
    <div class="container d-flex justify-content-between align-items-center">
      <span>
        Summer Sale For All Swim Suits And Free Express Delivery â€“ OFF 50%!
        <strong><a href="#" class="text-dark text-decoration-none">ShopNow</a></strong>
      </span>

      <!-- Language -->
      <div class="dropdown">
        <button class="btn btn-sm btn-white dropdown-toggle" type="button" data-bs-toggle="dropdown">
          English
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <li><a class="dropdown-item" href="#">English</a></li>
          <li><a class="dropdown-item" href="#">Arabic</a></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Main Header -->
  <header class="main-header bg-light py-3">
    <div class="container d-flex justify-content-between align-items-center">

      <!-- Logo -->
      <a href="/" class="fs-4 fw-bold text-dark text-decoration-none">Electro</a>

      <!-- Search -->
      <form action="/search" method="GET" class="flex-grow-1 mx-4">
        <div class="input-group">
          <span class="input-group-text bg-white border-end-0">
            <i class="fas fa-search"></i>
          </span>
          <input type="text" name="q" class="form-control border-start-0 rounded-end" placeholder="Search">
        </div>
      </form>

      <!-- Right Controls -->
      <div class="d-flex align-items-center gap-3">

        <!-- User Dropdown -->
        <div class="dropdown">
          <button class="btn btn-dark d-flex align-items-center gap-2 rounded user-btn" type="button"
            data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-user-circle"></i>
            <span>
              <%- (typeof user !=="undefined" && user?.name) ? user.name : "Guest" %>
            </span>
            <i class="fas fa-chevron-down arrow-icon"></i>
          </button>
          <ul class="dropdown-menu dropdown-menu-end shadow dropdown-dark">
            <li>
              <a class="dropdown-item d-flex align-items-center gap-2"
                href="<%- (typeof user !== 'undefined' && user?.name) ? '/profile' : '/signUp' %>">
                <i class="fas fa-user"></i>
                <%- (typeof user !=="undefined" && user?.name) ? "My Profile" : "SignUp" %>
              </a>
            </li>
            <li>
              <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                <i class="fas fa-box"></i> Orders
              </a>
            </li>
            <li>
              <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                <i class="fas fa-heart"></i> Wishlist (1)
              </a>
            </li>
            <li>
              <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                <i class="fas fa-wallet"></i> Wallet
              </a>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>
            <li>
              <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                <i class="fas fa-sign-out-alt"></i> Logout
              </a>
            </li>
          </ul>
        </div>

        <!-- Cart -->
        <a href="/cart" class="btn btn-outline-secondary d-flex align-items-center gap-2 position-relative">
          <i class="fas fa-shopping-cart"></i> Cart
          <% if (typeof cartCount !=="undefined" && cartCount> 0) { %>
            <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle">
              <%= cartCount %>
            </span>
            <% } %>
        </a>

        <!-- Hamburger -->
        <button class="btn btn-outline-secondary">
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
  </header>