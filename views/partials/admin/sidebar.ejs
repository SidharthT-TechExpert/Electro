<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Electro Admin</title>
  <!-- Bootstrap and Remix icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">

  <link rel="stylesheet" href="/css/admin/DashBoard/header.css">
</head>

<body>

  <aside id="app-sidebar" class="electro-sidebar">
    <div class="sidebar-inner">

      <!-- Fixed Top: Logo + Brand -->
      <div class="sidebar-header">
        <div class="logo-circle">E</div>
        <span class="brand-text">Electro</span>
      </div>

      <!-- Scrollable Navigation -->
      <div class="sidebar-menu">
        <p class="sidebar-title">MAIN MENU</p>
        <a href="/admin/dashboard" class="nav-link active" data-path="/admin/dashboard">
          <i class="ri-dashboard-line nav-icon"></i>
          <span class="nav-text">Dashboard</span>
        </a>
        <a href="/admin/orders" class="nav-link" data-path="/admin/orders">
          <i class="ri-shopping-cart-line nav-icon"></i>
          <span class="nav-text">Orders</span>
        </a>
        <a href="/admin/customers" class="nav-link" data-path="/admin/customers">
          <i class="ri-user-line nav-icon"></i>
          <span class="nav-text">Customers</span>
        </a>

        <!-- Products Dropdown -->
        <a class="nav-link d-flex justify-content-between align-items-center" data-bs-toggle="collapse"
          href="#productsMenu" role="button" aria-expanded="false" aria-controls="productsMenu">
          <span>
            <i class="ri-box-3-line nav-icon"></i>
            <span class="nav-text">Products</span>
          </span>
          <i class="ri-arrow-right-s-line dropdown-arrow"></i>
        </a>
        <div class="collapse ps-4" id="productsMenu">
          <a href="/admin/products" class="nav-sublink">
            <i class="ri-file-list-line sub-icon"></i> Product List
          </a>
          <a href="/admin/sales" class="nav-sublink">
            <i class="ri-line-chart-line sub-icon"></i> Sales
          </a>
          <a href="/admin/wallet" class="nav-sublink">
            <i class="ri-wallet-3-line sub-icon"></i> Wallet
          </a>
          <a href="/admin/offers" class="nav-sublink">
            <i class="ri-fire-line sub-icon"></i> Offers
          </a>
        </div>
        <a href="/admin/coupons" class="nav-link">
          <i class="ri-ticket-2-line nav-icon"></i>
          <span class="nav-text">Coupons</span>
        </a>
        <a href="/admin/categories" class="nav-link">
          <i class="ri-folders-line nav-icon"></i>
          <span class="nav-text">Categories</span>
        </a>
        <a href="/admin/transactions" class="nav-link">
          <i class="ri-exchange-dollar-line nav-icon"></i>
          <span class="nav-text">Transactions</span>
        </a>
        <a href="/admin/brands" class="nav-link">
          <i class="ri-price-tag-3-line nav-icon"></i>
          <span class="nav-text">Brand</span>
        </a>

        <p class="sidebar-title">ADMIN</p>
        <a href="/admin/manage" class="nav-link">
          <i class="ri-shield-user-line nav-icon"></i>
          <span class="nav-text">Manage Admins</span>
        </a>
        <a href="/admin/roles" class="nav-link">
          <i class="ri-user-settings-line nav-icon"></i>
          <span class="nav-text">Admin Roles</span>
        </a>
      </div>

      <!-- Sticky Footer -->
      <div class="sidebar-footer">
        © 2025 Electro
      </div>

    </div>
  </aside>

  <!-- Mobile Overlay -->
  <div id="sidebar-overlay" class="sidebar-overlay"></div>


<script>
document.addEventListener("DOMContentLoaded", function () {
  const navLinks = document.querySelectorAll(".electro-sidebar .nav-link");
  const subLinks = document.querySelectorAll(".electro-sidebar .nav-sublink");

  function clearActive() {
    navLinks.forEach(l => l.classList.remove("active"));
    subLinks.forEach(l => l.classList.remove("active"));
  }

  // Click events
  [...navLinks, ...subLinks].forEach(link => {
    link.addEventListener("click", function () {
      clearActive();
      this.classList.add("active");
    });
  });

  // URL-based auto highlight
  const path = window.location.pathname;
  [...navLinks, ...subLinks].forEach(link => {
    if (link.getAttribute("href") === path) {
      clearActive();
      link.classList.add("active");

      // if it’s a sublink, expand its parent menu
      const parentCollapse = link.closest(".collapse");
      if (parentCollapse) {
        new bootstrap.Collapse(parentCollapse, { show: true });
        parentCollapse.previousElementSibling.classList.add("active");
      }
    }
  });
});
</script>

